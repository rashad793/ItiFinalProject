@model IEnumerable<Category>


	<div class="d-flex justify-content-center">
    <h1 class="text-primary">Products Portal</h1>
</div>

<br />
<hr />
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(c => c.CategoryId)</th>
            <th scope="col">@Html.DisplayNameFor(c => c.CategoryName)</th>
            <th scope="col">@Html.DisplayNameFor(c => c.Description)</th>
            <th scope="col" colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="col">@item.CategoryId</td>
                <td scope="col">@item.CategoryName</td>
                <td scope="col">@item.Description</td>>
                <td scope="col">
                    <a asp-controller="Category" asp-action="Details" asp-route-Id="@item.CategoryId" class="btn btn-primary">View</a>
                </td>
                <td scope="col">
                    <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.CategoryId" class="btn btn-secondary">Edit</a>
                </td scope="col">
                <td scope="col">
                    <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.CategoryId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Add Product</a>
    </tfoot>
</table>